<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_activity_main_delivery"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_delivery_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:background="#fff">
            <LinearLayout
                android:id="@+id/ll_open_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/click_menu_background">

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/ic_menu_black_36dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_10"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_delivery_bar_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="起源·部落"
                android:textSize="@dimen/sp_17"
                android:textColor="#494444"
                android:gravity="center"/>


            <LinearLayout
                android:id="@+id/ll_search_waybill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/click_menu_background">


                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_margin="10dp"
                    android:src="@drawable/search_black_128px"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--入库按钮-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/bt_enter_warehouse"
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="@dimen/dp_110"
                            android:src="@drawable/enter_warehouse"
                            app:rippleColor="@color/colorThemeA700"
                            app:backgroundTint="@color/colorThemeA200"
                            app:fabSize="normal"
                            app:elevation="8dp"
                            app:pressedTranslationZ="16dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:text="入库"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50">

                    <!--出库按钮-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/bt_out_of_warehouse"
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="@dimen/dp_110"
                            android:src="@drawable/out_of_warehouse"
                            app:rippleColor="@color/colorThemeA700"
                            app:backgroundTint="@color/colorThemeA200"
                            app:fabSize="normal"
                            app:elevation="8dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            app:pressedTranslationZ="16dp"/>
                        <TextView
                            android:text="出库"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"></LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorThemeA400"
            android:padding="20dp">


            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/station"
                android:layout_marginTop="120dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XunselF"
                    android:textSize="@dimen/dp_25"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_user_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广州站点"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · "
                    android:textSize="@dimen/dp_14"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/tv_user_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递员"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#fff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_open_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_menu_background"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/colorText"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_personal_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_menu_background"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关条款"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/colorText"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_menu_background"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/colorText"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_menu_background"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/colorText"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>