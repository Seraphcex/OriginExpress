<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_main_delivery"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThemeBackground">

    <LinearLayout
        android:id="@+id/ll_delivery_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_delivery_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户,欢迎"
            android:textSize="@dimen/sp_20"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_delivery_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_delivery_row1_1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeBlue">

            <ImageView
                android:id="@+id/iv_delivery_icon_receive"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/outline_assignment_returned_black_48"/>

            <TextView
                android:id="@+id/tv_delivery_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="收件"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivery_row1_2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeRed">

            <ImageView
                android:id="@+id/iv_delivery_icon_distribute"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/outline_unarchive_black_48"/>

            <TextView
                android:id="@+id/tv_delivery_distribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="派件"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_delivery_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_delivery_row2_1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeSand">

            <ImageView
                android:id="@+id/iv_delivery_icon_sign"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/outline_assignment_turned_in_black_48"/>

            <TextView
                android:id="@+id/tv_delivery_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="签收"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivery_row2_2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeGreen">

            <ImageView
                android:id="@+id/iv_delivery_icon_search"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/outline_find_in_page_black_48"/>

            <TextView
                android:id="@+id/tv_delivery_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="查询"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_delivery_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_delivery_row3_1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeBlue">

            <ImageView
                android:id="@+id/iv_delivery_icon_setting"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/baseline_settings_black_48"/>

            <TextView
                android:id="@+id/tv_delivery_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="设置"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivery_row3_2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeGreen"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/baseline_settings_black_48"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="设置"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>