<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_main_driver"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThemeBackground">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_activity_main_driver"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_driver_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="显示登录用户名,欢迎"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_driver_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_driver_row1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeBlue">

            <ImageView
                android:id="@+id/iv_driver_icon_load"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/outline_local_shipping_black_48"/>

            <TextView
                android:id="@+id/tv_driver_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="装车"
                android:textSize="20sp"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_driver_row1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeRed">

            <ImageView
                android:id="@+id/iv_driver_icon_unload"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/outline_local_shipping_left_black_48"/>

            <TextView
                android:id="@+id/tv_driver_unload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="卸车"
                android:textSize="20sp"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_driver_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_driver_row2_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeSand">

            <ImageView
                android:id="@+id/iv_driver_icon_search"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/outline_find_in_page_black_48"/>

            <TextView
                android:id="@+id/tv_driver_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="查询"
                android:textSize="20sp"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_driver_row2_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorThemeGreen">

            <ImageView
                android:id="@+id/iv_driver_icon_setting"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_settings_black_48"/>

            <TextView
                android:id="@+id/tv_driver_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="设置"
                android:textSize="20sp"
                android:textColor="#000000"
                android:typeface="monospace"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>