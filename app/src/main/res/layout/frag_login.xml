<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_80"
        android:scaleType="centerCrop"
        android:src="@drawable/rocket"
        android:layout_gravity="center"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="起源·部落"
        android:textColor="@color/colorThemeBackground"
        android:textSize="@dimen/sp_18"
        android:typeface="monospace"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/rl_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:background="#f1f1f1">

        <ImageView
            android:id="@+id/iv_userIconName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/admin" />



        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_userIconName"
            android:background="@null"
            android:ems="19"
            android:maxLength="30"
            android:maxLines="1"
            android:hint="  用户名"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_unameClear"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/ic_clear_black_48dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userName"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#f1f1f1">

        <ImageView
            android:id="@+id/iv_userIconPwd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/passw" />


        <EditText
            android:id="@+id/et_userPwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_userIconPwd"
            android:background="@null"
            android:ems="19"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="  密码"
            android:maxLength="30"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_upwdClear"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/ic_clear_black_48dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_userCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_userPwd"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#fff"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_checkboxPwdRem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:checked="false"
            android:duplicateParentState="false"
            android:text="记住密码"
            android:textColor="@color/colorThemeBackground"
            android:textSize="@dimen/sp_13"
            android:buttonTint="@color/colorThemeBackground" />

        <CheckBox
            android:id="@+id/cb_checkboxAutolog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cb_checkboxPwdRem"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:checked="false"
            android:duplicateParentState="false"
            android:text="自动登录"
            android:textColor="@color/colorThemeBackground"
            android:textSize="@dimen/sp_13"
            android:buttonTint="@color/colorThemeBackground" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_login"
                android:src="@drawable/login"
                app:backgroundTint="@color/colorThemeBackground"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_margin="30dp"
                app:fabSize="normal"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>